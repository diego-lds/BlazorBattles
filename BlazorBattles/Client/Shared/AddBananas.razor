<button @onclick="IncreaseBananasCount" class="btn btn-info">
	<span class="oi oi-plus"></span>
</button>
@code {
	[Parameter]
	public EventCallback<int> BananasAdded { get; set; }

	public async Task IncreaseBananasCount()
	{   // Evoca o evento passando  o valor 10
		await BananasAdded.InvokeAsync(10);
	}
}
